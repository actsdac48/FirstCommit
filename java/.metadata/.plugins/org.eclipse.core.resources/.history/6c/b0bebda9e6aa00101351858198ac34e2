
import java.time.LocalDate;

public class Main {
    public static void main(String[] args) {
        EmployeeManager manager = new EmployeeManager();
        try {
            manager.addEmployee(new Employee(1, "Alice", Dept.IT, LocalDate.of(2022, 1, 10)));
            manager.addEmployee(new Employee(2, "Bob", Dept.HR, LocalDate.of(2021, 5, 15)));
        } catch (EmployeeException e) {
            System.out.println(e.getMessage());
        }
        manager.displayAllEmployees();
        manager.displayEmployeesByDept(Dept.IT);
        manager.displayDeptWiseCount();
        manager.sortByJoiningDate();
    }
}
