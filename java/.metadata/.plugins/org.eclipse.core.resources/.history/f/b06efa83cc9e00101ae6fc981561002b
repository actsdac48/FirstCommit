				case 1 : {
					do {
						System.out.println("Enter which type of Employee\n1. Manager\n2. Engineer\n3. SalesPerson\n4. Main Menu");
						ch = GetInput.getInt();
						
						switch(ch) {
							case 1 : {
								
								System.out.print("Enter name : ");
								String name = GetInput.getString();
								
								String address;
								
								
								System.out.print("Enter name : ");
								int age = GetInput.getInt();
								
								System.out.print("Enter name : ");
								boolean gender = GetInput.getInt();
								
								long basicSalary;
								
								
								
								
								objEmployee[0] = new Manager(name, address, age, gender, basicSalary);
							} break;
							case 2 : {} break;
							case 3 : {} break;
							case 4 : {} break;
						}
						
					}while(ch<4);
					} break;
				case 2 : {} break;
				case 3 : {} break;
				case 4 : {} break;
				case 5 : {} break;
				case 6 : {} break;
			}
			
		}while(choice < 6);

		
	}

}
